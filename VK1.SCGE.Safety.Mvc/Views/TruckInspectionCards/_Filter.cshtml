@{
    Layout = null;
}

<div class="card">
    <div class="card-body pt-0 pb-2">
        <div class="row pt-2 pb-0">
            <span class="text-muted"><i class="fa fa-filter"></i> ค้นหาโดย </span>
        </div>
        <div class="form-row">
            <label for="truckInspectionDate" class="mt-2">วันที่ตรวจ</label>
            <div class="col-md-2 mb-2 mx-3 pt-2">
                <input type="text" class="form-control" id="truckInspectionDate" placeholder="dd/MM/yyyy" value="@($"{DateTime.Today:dd/MM/yyyy}")">
            </div>
            <label for="vehicle" class="mt-2">ทะเบียน</label>
            <div class="col-md-3 mb-3 mx-3 pt-2">
                <select id="vehicle"
                        asp-items="ViewBag.Vehicles"
                        class="form-control">
                    <option value="">--ทั้งหมด--</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-mdb-color" onclick="return getTruckInspectionCard()">Search</button>
            </div>
        </div>
    </div>
</div>

