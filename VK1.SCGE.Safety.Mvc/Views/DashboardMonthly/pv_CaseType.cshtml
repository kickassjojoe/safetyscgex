@{
    IEnumerable<CaseTypeViewModel> caseTypeViewModels = (IEnumerable<CaseTypeViewModel>)ViewBag.CaseTypes;
    var companyRight = 0;
    var companyWrong = 0;
    var carrierRight = 0;
    var carrierWrong = 0;
    if (caseTypeViewModels != null) {

        foreach (var item in caseTypeViewModels) {
            if (item.Name == "รถบริษัท" && !item.IsRightSide) {
                companyWrong = item.CountOfCase;
            }
            if (item.Name == "รถบริษัท" && item.IsRightSide) {
                companyRight = item.CountOfCase;
            }
            if (item.Name == "รถผู้รับเหมา" && !item.IsRightSide) {
                carrierWrong = item.CountOfCase;
            }
            if (item.Name == "รถผู้รับเหมา" && item.IsRightSide) {
                carrierRight = item.CountOfCase;
            }
        }
    }
}
@if (ViewBag.CaseTypes != null) {
<div>
    <div class="d-flex justify-content-between pb-0" style="margin-top:-15px">
        <button class="btn btn-danger btn-large text-nowrap text-center p-0" style="width:107px;height:83px;font-size:12px">
            กรณีฝ่ายผิด<br />และประมาทร่วม <br />(รถบริษัท)
        </button>
        <button class="btn btn-success btn-large text-nowrap text-center p-0" style="width:107px;height:83px">
            กรณีฝ่ายถูก <br />(รถบริษัท)
        </button>
    </div>
    <div class="d-flex justify-content-between pt-0" style="margin-top:-10px">
        <button class="btn btn-light" style="width:107px;height:40px;text-align:center">
            @companyWrong
        </button>
        <button class="btn btn-light" style="width:107px;height:40px">
            @companyRight
        </button>
    </div>
    <div class="d-flex justify-content-between pb-0 mt-1">
        <button class="btn btn-danger btn-large text-nowrap text-center p-0" style="width:107px;height:83px;font-size:12px">
            กรณีฝ่ายผิด<br />และประมาทร่วม <br />(รถผู้รับเหมา)
        </button>
        <button class="btn btn-success btn-large text-nowrap text-center p-0" style="width:107px;height:83px">
            กรณีฝ่ายถูก <br />(รถผู้รับเหมา)
        </button>
    </div>
    <div class="d-flex justify-content-between pt-0" style="margin-top:-10px">
        <button class="btn btn-light" style="width:107px;height:40px;text-align:center;vertical-align:central">
            @carrierWrong
        </button>
        <button class="btn btn-light" style="width:107px;height:40px;text-align:center;vertical-align:top">
            @carrierRight
        </button>
    </div>
</div>
}