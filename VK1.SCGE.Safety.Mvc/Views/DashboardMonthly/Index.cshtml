                    <partial name="pv_Rank" />
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-2">
        <div class="card mr-1 px-2">
            <div class="card-body px-0">
                <div id="chart3"></div>
            </div>
        </div>
        <div class="card mr-1">
