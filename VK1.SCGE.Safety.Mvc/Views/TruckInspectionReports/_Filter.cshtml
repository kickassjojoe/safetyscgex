@{
    Layout = null;
}
<div class="card">
    <div class="card-body pt-0 pb-0">
        <div class="row pt-2 pb-0">
            <span class="text-muted"><i class="fa fa-filter"></i> ค้นหาโดย </span>
        </div>
        <div class="form-row">
            <div class="col-md-3 mb-2 mx-3 pt-3">
            <label for="truckInspectionDate">วันที่ตรวจ</label>
                <input id="datefrom" type="text" name="datefrom" />
                <input id="dateto" type="text" name="dateto" />
            </div>
            <label for="vehicle" class="mt-3">ภาค</label>
            <div class="col-md-2 mb-3 mx-3" style="margin-top:-15px">
                <select class="mdb-select md-form" 
                        id="regions"
                        asp-items="ViewBag.Regions" searchable="Search here..">
                    <option value="" disabled selected>--ทั้งหมด--</option>
                </select>
            </div>
            <label for="vehicle" class="mt-3">สาขา</label>
            <div class="col-md-2 mb-3 mx-3" style="margin-top:-15px">
                <select class="mdb-select md-form"
                        id="branches"
                        asp-items="ViewBag.Branches" searchable="Search here..">
                    <option value="" selected disabled>--ทั้งหมด--</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="button" class="btn btn-mdb-color" onclick="return fnTruckInspectionReport()" id="btnSearch">Search</button>
            </div>
        </div>
    </div>
</div>

