@{
    Layout = null;
}
<div class="card">
    <div class="card-body pt-0 pb-0">
        <div class="row pt-2 pb-0">
            <span class="text-muted"><i class="fa fa-filter"></i> ค้นหาโดย </span>
        </div>
        <div class="form-row">
            <label class="mt-3 mx-3">วันที่ตรวจรถ </label>
            <div class="col-md-2 ml-3 md-form mt-0">
                <input type="text" class="form-control" id="date" placeholder="dd/MM/yyyy" value="@($"{DateTime.Today:dd/MM/yyyy}")">
            </div>
            <label class="mt-3 mx-3">ทะเบียน </label>
            <div class="col-md-2 mb-3 mx-3" style="margin-top:-20px">
                <select class="mdb-select md-form"
                        id="regions"
                        asp-items="ViewBag.Vehicles" searchable="Search here..">
                    <option value="" disabled selected>--ทั้งหมด--</option>
                </select>
            </div>

            <div class="col-md-2">
                <button type="button" class="btn btn-mdb-color ml-3" onclick="return fnGetCard()" id="btnSearch">Search</button>
            </div>
        </div>
    </div>
</div>

