@model List<PenaltyNotice>

@if (Model != null) {

<table id="basicTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead class="mdb-color text-white">
        <tr>
            <th>#</th>
            <th>เลขที่</th>            
            <th>สาขา</th>
            <th>พนักงาน</th>
            <th>ครั้งที่</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int itemNo = 1;}
        @foreach (var item in Model) {
            <tr class="pt-0">
                <td style="font-size:16px">@(itemNo++)</td>
                <td style="font-size:16px">@item.PenaltyNoticeCode</td>
                <td style="font-size:16px">@item.BranchCode</td>
                <td style="font-size:16px">@item.EmployeeName</td>
                <td style="font-size:16px">@item.CaseCount</td>
                <td>
                    <a target="_blank"
                       asp-action="ViewAsPdf"
                       asp-controller="PenaltyNotices"
                       asp-route-id="@item.PenaltyNoticeCode"
                       class="btn btn-default btn-sm">
                        View
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
