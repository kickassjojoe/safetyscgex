@model VK1.SCGE.Safety.Mvc.Dtos.CARUploadFileViewModel;

<form class="md-form" enctype="multipart/form-data" method="post" id="myform">
    <input type="hidden" asp-for="CARCode" />
    <input type="hidden" id="dateFrom" value="@ViewBag.DateFrom" />
    <input type="hidden" id="dateTo" value="@ViewBag.DateTo" />
    <input type="hidden" id="branchCode" value="@ViewBag.BranchCode" />
    <input type="hidden" id="status" value="@ViewBag.Status" />
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Upload Pdf file</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="file-field">
                    <div class="btn btn-primary btn-sm float-left">
                        <span>Choose files</span>
                        <input asp-for="PdfFile">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload one or more files">
                    </div>
                </div>
            </div>

            <!--Footer-->
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary"
                        id="btnUpload">
                    Save <i class="far fa-save ml-1 white-text"></i>
                </button>
                <a type="button" class="btn btn-outline-danger waves-effect" data-dismiss="modal" href="#">Cancel</a>
            </div>
        </div>
    </div>
</form>