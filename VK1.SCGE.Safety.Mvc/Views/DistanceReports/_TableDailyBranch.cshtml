@if (ViewBag.Count > 0) {
    <div class="d-flex justify-content-between">
        <div class="d-flex flex-row"><h5 class="mt-3">รายงานเลขระยะทางวันที่ @ViewBag.Date ประจำสาขา @ViewBag.Branch</h5></div>
        <div class="d-flex flex-row">
            <a asp-action="ExcelGetDistanceByBranchDay"
               asp-controller="DistanceReports"
               asp-route-day="@ViewBag.Day"
               asp-route-branch="@ViewBag.BranchCode"
               class="btn btn-outline-danger"><i class="fas fa-file-excel"></i> Excel</a>
        </div>
    </div>
    <input type="hidden" value="@ViewBag.C" id="CDay" />
    <table class="table table-sm">
        <thead class="default-color white-text">
            <tr class="text-center">
                <th class="font-weight-bold">ภาค</th>
                <th class="font-weight-bold">สาขา</th>
                <th class="font-weight-bold">ทะเบียน</th>
                <th class="font-weight-bold">ประเภทรถ</th>
                <th class="font-weight-bold">เลขระยะทางเริ่มต้นของวัน</th>
                <th class="font-weight-bold">เลขระยะทางสิ้นสุดของวัน</th>
                <th class="font-weight-bold">รวมระยะทางที่รถวิ่งในวัน</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.DailyBranch) {
                <tr class="text-center">
                    <td>@item.RegionName</td>
                    <td>@item.BranchCode</td>
                    <td>@item.PlateNumber</td>
                    <td>@item.VehicleType</td>
                    <td>@item.StartOdometer</td>
                    <td>@item.FinishedOdometer</td>
                    <td>@item.TotalOdometer</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="text-center">
                <td colspan="6">รวม</td>
                <td>@ViewBag.GrandTotal</td>
            </tr>
        </tfoot>
    </table>
}
