<p class="card-title lead text-center">
    รายการสาขา
</p>
<table id="datatable" class="table table-striped table-bordered table-sm table-hover">
    <thead>
        <tr>
            <th>ลำดับ</th>
            <th>Branch code</th>
            <th>ชื่อสาขา</th>
            <th>หัวหน้าสาขา</th>
            <th>E-mail</th>
            <th>วันที่สร้าง</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int itemNo = 1;}
        @foreach (var item in ViewBag.Branches) {
            <tr>
                <td>@(itemNo++)</td>
                <td>@item.BranchCode</td>
                <td>@item.Name</td>
                <td>@item.BranchManager</td>
                <td>@item.Email</td>
                <td>@($"{item.CreatedDate:dd/MM/yyyy}")</td>
                <td style="font-size:smaller;width:25px">
                    <a asp-action="Edit" class="btn btn-outline-success px-2 py-1"
                       asp-route-id="@item.BranchCode"
                       title="แก้ไขข้อมูล">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a title="ลบข้อมูล" class="btn btn-outline-danger px-2 py-1" onclick="return deleteItem('@item.BranchCode')">
                        <i class="far fa-trash-alt" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>