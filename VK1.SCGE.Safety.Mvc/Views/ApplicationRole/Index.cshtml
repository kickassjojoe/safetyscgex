@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        $('#datatable').DataTable();

        function deleteItem(id) {
            alertify.confirm('Delete', 'Are you sure you want to delete this (Y/N)?',
                function () {
                    const url = `/ApplicationRole/Delete/${id}`;
                    $.post(url).then(res => {
                        if (res.error) {
                            const alert = res.error;
                            alertify.error(alert.toString());
                        } else {
                            const getUrl = '/ApplicationRole/GetAll';
                            $.get(getUrl).then((res) => {
                                $('#data').html(res);
                                $('#datatable').DataTable();
                            }).done(() => {
                                $('#RoleName').val('');
                                $('#Description').val('');
                                alertify.success('Deleted!');
                            })
                        }
                    })
                    //  window.location.href = url;
                },
                function () {
                    alertify.error('Cancel')
                });
        }

        $('#btnCreateRole').click(() => {
            const url = '/ApplicationRole/Create';
            const data = {
                RoleName: $('#RoleName').val(),
                Description: $('#Description').val(),
            };
            $.post(url, data).then(res => {
                if (res.error) {
                    const alert = res.error;
                    alertify.error(alert.toString());
                } else {
                    const getUrl = '/ApplicationRole/GetAll';
                    $.get(getUrl).then((res) => {
                        $('#data').html(res);
                        $('#datatable').DataTable();
                    }).done(() => {
                        $('#RoleName').val('');
                        $('#Description').val('');
                        alertify.success('Successfully!');
                    })
                }
            })
        });

    </script>
}
