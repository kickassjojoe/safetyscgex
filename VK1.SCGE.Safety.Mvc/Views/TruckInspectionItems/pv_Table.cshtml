<p class="card-title lead text-center">
    รายการตรวจย่อย
</p>
<table id="datatable" class="table table-striped table-bordered table-sm table-hover">
    <thead>
        <tr>
            <th>ลำดับ</th>
            <th>รายการตรวจย่อย</th>
            <th>ต้องตรวจ</th>
            <th>ตรวจวันที่1และ15</th>
            <th>รายการตรวจหลัก</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int itemNo = 1;}
        @foreach (var item in ViewBag.CategoryItems) {
            var bold = item.IsMust ? "font-weight-bold" : "";
            <tr>
                <td>@(itemNo++)</td>
                <td class="text-nowrap @bold">@item.Name</td>
                <td>@if (item.IsMust) {<i class="fas fa-check"></i>}</td>
                <td>@if (item.IsFirstAndFifteenth) {<i class="fas fa-check"></i>}</td>
                <td>@item.TruckInspectionCategory.Name</td>
                <td>
                    <a title="แก้ไข"
                       asp-action="Edit"
                       asp-route-id="@item.TruckInspectionItemId"
                       class="btn btn-outline-success px-2 py-1">
                        <i class="far fa-edit" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a title="ลบข้อมูล" class="btn btn-outline-danger px-2 py-1" onclick="return deleteItem(@item.TruckInspectionItemId)">
                        <i class="far fa-trash-alt" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>