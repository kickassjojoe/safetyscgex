@model InvestigateCard
@{
    var casedate = Model.PartOne.CaseDate.ToString("yyyy-MM-dd");
    var casetime = Model.PartOne.CaseTime.ToString(@"hh\:mm");
    var carrierName = Model.PartOne.IsSub ? Model.PartOne.CompanyName : "";
}

<input type="hidden" asp-for="PartOne.CreatedBy" />
<input type="hidden" asp-for="PartOne.CreatedDate" />

<h6 class="px-3 mt-2 font-weight-bold"><u>ส่วนที่1 ข้อมูลทั่วไป</u></h6>

<div class="form-row">
    <div class="col-md-4 md-form">
        <label for="PartOne_CaseName">ชื่อเคส </label>
        <input asp-for="PartOne.CaseName" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกชื่อเคส
        </div>
    </div>
    <div class="col-md-3 md-form p-0 mr-3" style="margin-top:0px">
        <select class="mdb-select md-form p-0"
                asp-items="@ViewBag.Branches"
                asp-for="PartOne.BranchCode"
                searchable="Search here..">
        </select>
        <label class="mdb-main-label">สาขา</label>
    </div>
    <div class="col-md-2 mr-3">
        <div class="md-form md-outline input-with-post-icon datepicker p-0" id="falseY">
            <input placeholder="Select date" type="text" id="caseDate" name="caseDate" class="form-control" value="@casedate" required>
            <label for="caseDate">วันที่เกิดเหตุ</label>
            <div class="invalid-feedback">
                กรุณากรอกวันที่เกิดเหตุ
            </div>
        </div>
    </div>
    <div class="col-md-2 md-form">
        @*<div class="md-form md-outline input-with-post-icon datepicker" id="falseY">
                <input placeholder="Select time" type="text" id="caseTime" name="caseTime" class="form-control" required>
                <label for="caseDate">เวลาเกิดเหตุ</label>
                <div class="invalid-feedback">
                    กรุณากรอกเวลาเกิดเหตุ
                </div>
            </div>*@
        <label for="PartOne_CaseTime">เวลาเกิดเหตุ(ชม:นาที)</label>
        <input asp-for="PartOne.CaseTime" class="form-control" pattern="^[0-1][0-9]:[0-5][0-9]$|^[2][0-3]:[0-5][0-9]$|^[2][3]:[0][0]$" required value="@casetime" />
        <div class="invalid-feedback">
            กรุณากรอกเวลาเกิดเหตุ
        </div>
    </div>

</div>
<div class="form-row">
    <div class="col-md-4 md-form">
        <label for="PartOne_CaseLocation">สถานที่เกิดเหตุ </label>
        <input asp-for="PartOne.CaseLocation" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกสถานที่เกิดเหตุ
        </div>
    </div>
    <div class="col-md-3 md-form">
        <label for="PartOne_EmployeeName">ชื่อ-สกุลพนักงาน </label>
        <input asp-for="PartOne.EmployeeName" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกชื่อ
        </div>
    </div>
    <div class="col-md-2 md-form input-group">
        <div class="md-form input-group" style="margin-top:-10px">
            <div class="input-group-prepend pb-0 pt-3">
                <span class="input-group-text md-addon">2610 - </span>
            </div>
            <input type="text" class="form-control mt-3" asp-for="PartOne.EmployeeCode" maxlength="6" pattern="[0-9]{6}" placeholder="รหัส6หลัก" >
        </div>

    </div>
    <div class="col-md-3 md-form p-0" style="margin-top:0px">
        <select class="mdb-select md-form p-0"
                asp-items="@ViewBag.Positions"
                asp-for="PartOne.PositionId"
                searchable="Search here..">
            <option value="" disabled selected>โปรดเลือก</option>
        </select>
        <label class="mdb-main-label">ตำแหน่ง</label>
    </div>
</div>
<div class="form-row">
    <div class="col-md-2 md-form">
        <label for="PartOne_Age">อายุตัว(ปี) </label>
        <input asp-for="PartOne.Age" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกอายุตัว
        </div>
    </div>
    <div class="col-md-2 md-form">
        <label for="PartOne_YearExperience">อายุงาน(ปี) </label>
        <input asp-for="PartOne.YearExperience" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกอายุงาน
        </div>
    </div>
    <div class="col-md-2 md-form">
        <label for="PartOne_MonthExperience">อายุงาน(เดือน) </label>
        <input asp-for="PartOne.MonthExperience" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกอายุงาน
        </div>
    </div>
    <div class="col-md-2 md-form">
        <label for="PartOne_DayExperience">อายุงาน(วัน) </label>
        <input asp-for="PartOne.DayExperience" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกอายุงาน
        </div>
    </div>
    <div class="col-md-2 md-form">
        <label for="PartOne_DriverExperience">ประสบการณ์ขับรถ(ปี) </label>
        <input asp-for="PartOne.DriverExperience" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกประสบการณ์ขับรถ
        </div>
    </div>
    <div class="col-md-2 md-form">
        <label for="PartOne_Telephone">เบอร์โทรพนักงาน </label>
        <input asp-for="PartOne.Telephone" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกเบอร์โทรศัพท์พนักงาน
        </div>
    </div>

</div>
<div class="form-row mt-3">
    <div class="col-md-4">
        <div class="font-weight-bold"><label>พนักงานสังกัดบริษัทฯ</label></div>
        <input type="hidden" id="_radioCompay" value="@Model.PartOne.CompanyName" />
        <input type="hidden" id="_isSub" value="@Model.PartOne.IsSub.ToString()"/>

        <!-- Material inline 1 -->
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline1" name="radioCompany" value="SCG Express">
            <label class="form-check-label" for="materialInline1">SCG Express</label>
        </div>

        <!-- Material inline 2 -->
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline2" name="radioCompany" value="SCG Skill">
            <label class="form-check-label" for="materialInline2">SCG Skill</label>
        </div>

        <!-- Material inline 3 -->
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline3" name="radioCompany" onclick="return ChooseCarrier()">
            <label class="form-check-label" for="materialInline3">Sub</label>
        </div>
    </div>
    <div class="col-md-3">
        <div class="md-form">
            <input type="search" id="form-autocomplete" name="carreirName" class="form-control mdb-autocomplete" value="@carrierName" disabled>
            <button class="mdb-autocomplete-clear">
                <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="https://www.w3.org/2000/svg">
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                    <path d="M0 0h24v24H0z" fill="none" />
                </svg>
            </button>
            <label for="form-autocomplete" class="active">ผู้รับเหมาขนส่ง</label>
            <div class="invalid-feedback">
                กรุณากรอกผู้รับเหมา
            </div>
        </div>
    </div>
    <div class="col-md-1" style="margin-top:28px">
        <!-- Material inline 4 -->
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline4" name="radioCompany" onclick="return Check()">
            <label class="form-check-label" for="materialInline4">อื่น ๆ</label>
        </div>
    </div>
    <div class="col-md-3 md-form">
        <label for="PartOne_CompanyName">กรณีชื่อบริษัทฯ Sub หรือ อื่นๆ ระบุ </label>
        <input asp-for="PartOne.CompanyName" class="form-control" />
        <div class="invalid-feedback">
            กรุณากรอกชื่อบริษัทฯ Sub หรือ อื่นๆ
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-md-4">
        <div class="font-weight-bold"><label>กะการทำงาน </label></div>
        <input type="hidden" id="_radioShift" value="@Model.PartOne.Shift" />
        <!-- Material inline 4 -->
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline5" name="radioShift" value="เช้า">
            <label class="form-check-label" for="materialInline5">เช้า  </label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline6" name="radioShift" value="กลางคืน">
            <label class="form-check-label" for="materialInline6">กลางคืน</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline7" name="radioShift" onclick="return CheckShift()">
            <label class="form-check-label" for="materialInline7">กะอื่นๆ </label>
        </div>
    </div>
    <div class="col-md-3 md-form">
        <label for="PartOne_Shift">กรณีกะอื่น ๆ ระบุ </label>
        <input asp-for="PartOne.Shift" class="form-control" />
        <div class="invalid-feedback">
            กรุณากรอกข้อมูลกะอื่นๆ
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-md-4">
        <div class="font-weight-bold"><label>กรณี </label></div>
        <input type="hidden" id="_radioCaseType" value="@Model.PartOne.CaseType" />
        <!-- Material inline 4 -->
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline8" name="radioCase" value="ผิด">
            <label class="form-check-label" for="materialInline8">ผิด  </label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline9" value="ถูก" name="radioCase">
            <label class="form-check-label" for="materialInline9">ถูก</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="materialInline10" value="ประมาทร่วม" name="radioCase">
            <label class="form-check-label" for="materialInline10">ประมาทร่วม </label>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-md-6">
        <div style="height:10px" class="p-0 font-weight-bold"><label>ประเภทของอุบัติเหตุ</label></div>
        <input type="hidden" id="_radioAccidentMode" value="@Model.PartOne.AccidentMode" />
        <div class="form-check form-check-inline p-0">
            <input type="radio" class="form-check-input" id="materialInline11" value="Transport" name="radioAccident" checked onclick="return RadioAccidentTransportClick()">
            <label class="form-check-label" for="materialInline11">Transport ขนส่ง  </label>
            <div class="md-form ml-5" style="margin-top:10px">
                <select class="mdb-select md-form p-0"
                        asp-items="@ViewBag.Vehicles"
                        asp-for="PartOne.VehicleId"
                        searchable="Search here..">
                    <option value="" disabled selected>โปรดเลือก</option>
                </select>
                <label class="mdb-main-label">ทะเบียน</label>
            </div>
            <button type="button" class="btn btn-mdb-color btn-sm" id="btnAddVehicle" onclick="return formVehicleModal()">เพิ่มทะเบียน</button>
        </div>
        <div class="row">
            <div class="col-md-12" style="margin-top:-40px">
                <input type="hidden" id="_radioTransport" value="@Model.PartOne.TransportBy" />
                <!-- Group of material radios - option 1 -->
                <div class="form-check ml-5">
                    <input type="radio" class="form-check-input" id="materialGroupExample1" value="รถกระบะติดตั้งตู้" name="radioTransport">
                    <label class="form-check-label" for="materialGroupExample1">รถกระบะติดตั้งตู้</label>
                </div>
                <!-- Group of material radios - option 2 -->
                <div class="form-check ml-5">
                    <input type="radio" class="form-check-input" id="materialGroupExample2" value="รถจักรยานยนต์" name="radioTransport">
                    <label class="form-check-label" for="materialGroupExample2">รถจักรยานยนต์</label>
                </div>
                <!-- Group of material radios - option 3 -->
                <div class="form-check ml-5">
                    <input type="radio" class="form-check-input" id="materialGroupExample3" value="รถเก๋ง" name="radioTransport">
                    <label class="form-check-label" for="materialGroupExample3">รถเก๋ง</label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mt-5">
        <div class="form-check form-check-inline mt-2">
            <input type="radio" class="form-check-input" id="materialInline12" value="Other" name="radioAccident" onclick="return RadioAccidentOtherClick()">
            <label class="form-check-label" for="materialInline12">Other อื่นๆ </label>
        </div>
        <div class="row">
            <div class="col-md-12 mt-2">
                <!-- Group of material radios - option 1 -->
                <input type="hidden" id="_radioOther" value="@Model.PartOne.OtherBy" />
                <div class="form-check ml-5">
                    <input type="radio" class="form-check-input" id="materialGroupExample4" value="อุบัติเหตุในคลังหรือสาขา" name="radioOther">
                    <label class="form-check-label" for="materialGroupExample4">อุบัติเหตุในคลัง/สาขา</label>
                </div>
                <!-- Group of material radios - option 2 -->
                <div class="form-check ml-5">
                    <input type="radio" class="form-check-input" id="materialGroupExample5" value="อุบัติเหตุในสำนักงานออฟฟิต" name="radioOther">
                    <label class="form-check-label" for="materialGroupExample5">อุบัติเหตุในสำนักงานออฟฟิต</label>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-row"></div>
<div class="form-row">
    <div class="col-md-5 mt-4">
        <div><label>ระดับความรุนแรง</label></div>
        <input type="hidden" id="_radioRank" value="@Model.PartOne.Rank" />
        <!-- Group of material radios - option 1 -->
        <div class="form-check ml-5">
            <input type="radio" class="form-check-input" id="materialGroupExample6" value="L0เล็กน้อยไม่เข้าเกณฑ์เฉี่ยวชนเล็กน้อยไม่มีคนบาดเจ็บ" name="radioRank">
            <label class="form-check-label" for="materialGroupExample6">เล็กน้อยไม่เข้าเกณฑ์ เฉี่ยวชนเล็กน้อย ไม่มีคนเจ็บ</label>
        </div>
        <!-- Group of material radios - option 2 -->
        <div class="form-check ml-5">
            <input type="radio" class="form-check-input" id="materialGroupExample7" value="L1ขั้นปฐมพยาบาลรถใช้งานต่อไปได้" name="radioRank">
            <label class="form-check-label" for="materialGroupExample7">L1 - ขั้นปฐพยาบาล รถใช้งานต่อได้</label>
        </div>
    </div>
    <div class="col-md-7 mt-4">
        <div class="form-check mt-3">
            <input type="radio" class="form-check-input" id="materialGroupExample8" value="L2ขั้นรักษาพยาบาลเปลี่ยนงานไม่หยุดงานรถถูกลาก" name="radioRank">
            <label class="form-check-label" for="materialGroupExample8">L2 - ขั้นรักษาพยาบาล,เปลี่ยนงาน,ไม่หยุดงาน,รถถูกยกลากไม่สามารถเคลื่อนต่อเองได้</label>
        </div>
        <!-- Group of material radios - option 2 -->
        <div class="form-check">
            <input type="radio" class="form-check-input" id="materialGroupExample9" value="L3หยุดงานรถไม่สามารถซ่อมได้คืนซากรถ" name="radioRank">
            <label class="form-check-label" for="materialGroupExample9">L3 - หยุดงาน,รถไม่สามารถซ่อมได้คืนซากรถ</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" id="materialGroupExample10" value="L3เสียชีวิตรถไม่สามารถซ่อมได้คืนซากรถ" name="radioRank">
            <label class="form-check-label" for="materialGroupExample10">L3 - เสียชีวิต,รถไม่สามารถซ่อมได้คืนซากรถ</label>
        </div>
    </div>
</div>
<div style="height:10px"></div>
<div class="form-row">
    <div class="col-md-3 md-form">
        <label for="CaseName">ระยะเวลาตั้งแต่เกิดจนแล้วเสร็จ</label>
    </div>
    <div class="col-md-2 md-form">
        <input asp-for="PartOne.SolutionHour" class="form-control" required />
        <div class="invalid-feedback">
            กรุณากรอกระยะเวลา
        </div>
    </div>
    <div class="col-md-3 md-form">
        <label for="CaseName">ชั่วโมง</label>
    </div>
</div>


